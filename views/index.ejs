    <title>Image App</title>
    <style>
      body{
        background-color: rgb(239, 236, 220);
      }
      .row{
        background-color: rgb(108, 96, 19);
        border: 1px solid rgb(239, 236, 220);
        color: white;
      }
      .btn{
        background-color: rgb(108, 96, 19);
        border: 1px solid rgb(239, 236, 220);
      }
      .btn:hover{
        background-color: whitesmoke;
        color: black;
        border: 1px solid  rgb(108, 96, 19)
      }
      #resImage{
        margin: 80px;
        margin-left: 40%;
      }
    </style>
</head>
<body>
      
  <form class="container-fluid my-5 justify-content-center mx-2">
    <div class="row mb-3 form-control form-control-md py-5">
      <label for="inputEmail3" class="col-sm-2 col-form-label">Enter Image Address</label>
      <div class="col-sm-10">
        <input type="url" class="form-control" id="imgURL" name="imgURL">
      </div>
    </div>
    
    <div class="row mb-3 form-control form-control-md py-5">
      <label for="inputPassword3" class="col-sm-2 col-form-label">Enter Image Size</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="imgSize" name="imgSize">
      </div>
    </div>

    <div class="d-grid gap-2 col-4 mx-auto">
      <button class="btn btn-primary" type="submit">Get Image</button>
    </div>
    <div id="resImage" class="mx-3"><img src="" alt="" srcset=""></div>
  </form>

  
  <script src="/app.js"></script>
</body>
</html>